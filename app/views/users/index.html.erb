      <table>
        <tr>
          <th>Name:</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
      <% @users.each do |user| %>
        <tr>
          <td><%= link_to full_name(user), user %></td>
          <td></td>
          <td><%= link_to 'Edit', edit_user_path(user) %></td>
          <td><%= link_to 'Destroy', user, method: :delete,
             data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
      </table>

      <br />

      <%= link_to 'New User', new_user_path %>
